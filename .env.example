# Code Inspector Environment Configuration
# Copy this file to .env and fill in your values

# GitHub Integration (Optional)
# Get token from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token_here

# Flask Configuration
FLASK_SECRET_KEY=change-this-to-a-random-secret-key-in-production
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Model Configuration
CODEBERT_MODEL=microsoft/codebert-base
# Alternative: microsoft/codebert-base-mlm or graphcodebert-base

# Evaluation Configuration
CODEBERT_WEIGHT=0.6
TOKEN_WEIGHT=0.4
PASS_THRESHOLD=0.7

# File Upload Configuration
MAX_FILE_SIZE_MB=16
ALLOWED_EXTENSIONS=.py,.java,.js,.jsx,.ts,.tsx,.cpp,.c,.go,.rs

# Directories
UPLOAD_FOLDER=uploads
REPORT_FOLDER=reports
DATA_FOLDER=data

# Performance
USE_GPU=False
BATCH_SIZE=1
MAX_CODE_LENGTH=512

# Logging
LOG_LEVEL=INFO
LOG_FILE=codeinspector.log
